.flip
  /=render 'messageform'
  %h1 Conversation with #{@user.username.capitalize}
  %p#notice= notice
  %br
  #conversation

    - @messages.each do |message|
      %span <span class="mesg">Subject: </span> #{message.subject}
      %br/
      %span <span class="mesg">From: </span> #{message.sender.username}
      %br
      %span <span class="mesg">Message: </span> #{message.text}
      %br/
      %span <span class="mesg">plan: </span> #{message.plan}
      %br/
      %br
      %br/

      / %td= link_to 'delete', message, :confirm => "Are you sure you want to delete this message? You can't get it back", :method => :delete
  .nlnk
    = link_to 'Compose', new_message_user_path(@user)
  %BR
  .nlnk
    = link_to 'Profile', user_books_path(@user)
    / %br/
    / - @messages.each do |message|
    /   %b
    /     %div.blip
    /       = message.sender.username
    /       \:
    /       = message.text
    /       %br/
  %br/
  %br/
  %br/
  %br/
  %br/
 
  / =render 'messageform'


