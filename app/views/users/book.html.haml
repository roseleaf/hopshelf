%h1 The Bookshelf of #{@user.username.capitalize}
%p#notice= notice
#bookshelf.clearfix
  %br/
  - @books.each do |book|
    %b
      .blip
        = book.title
        by
        = book.author
        in
        =book.genre
        %p.thought #{@user.username.capitalize}'s thoughts on this
        .toggle
          =book.description
        %br/
  %br/
  %br/



  -if is_me? @user.id
    .entry
      %h2 Put a New Book on Your Shelf
      = form_for(@book) do |f|
        - if @book.errors.any?
          #error_explanation
            %h2
              = pluralize(@book.errors.count, "error")
              prohibited this user from being saved:
            %ul
              - @book.errors.full_messages.each do |msg|
                %li= msg
        .field
          = f.label :text, "Name of the book"
          %br/
          = f.text_field :title
        .field
          = f.label :text, "Author"
          %br/
          =f.text_field :author
        .field
          = f.label :text, "Genre"
          %br/
          =f.text_field :genre
        .field
          = f.label :text, "Brief Description"
          %br/
          =f.text_area :description

        = f.hidden_field :poster_id, :value => current_user.id
        .actions
          = f.submit "Shelf it"

%br
.link=link_to 'Home', :root
.limk=link_to 'Back to Friend List', :users