- if !current_user
  %h2 Hi! Please log in to see the goods. :)
  .link=link_to 'Home', :root

-else
  .container
    .box.flip
      %h1.shelfname The Bookshelf of #{@user.username.capitalize}
    %p#notice= notice
    #bookshelf.clearfix
      %br/
      - @books.each do |book|
        %b
          .blip
            = book.title
            by
            = book.author
    
            - if is_owner? book.poster_id 
              = link_to 'Edit', edit_book_path(book) 
            /   = link_to 'Edit', edit_book_path(@book)
            %p.thought #{@user.username.capitalize}'s thoughts on this
            .toggle
              =book.description
            / -if @books.blank?
      -if @books.empty?
        %h2 #{@user.username.capitalize} hasn't filled this shelf yet...

      %br/
      %br/
      %br/



      -if is_me? @user.id
        .entry
          %h2 Put a New Book on Your Shelf
          =render 'books/bookform'


    %br
    %a{:href => "/regions/#{current_user.region_id}"} Back to Neighbor List
    .shelf