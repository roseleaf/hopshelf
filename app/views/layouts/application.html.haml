!!!
%html
    %head
        %script{:src => "js/jquery.ba-hashchange.min.js", :type => "text/javascript"}
        %script{:src => "js/dynamicpage.js", :type => "text/javascript"}
        %title
            Shelfwire
        = stylesheet_link_tag "application"
        = javascript_include_tag :defaults, "application"
        = csrf_meta_tags
    %body
        .header.fill
            .content
                .sidediv.clearfix
                .nav
                    .greet
                        -if current_user
                            Welcome,
                            =current_user.username.capitalize
                    .linx
                        - if current_user
                            %a= link_to "Edit Profile", edit_user_path(current_user.id)
                            %a= link_to "Logout", :logout
                        -else
                            %a= link_to "Register", new_user_path
                            %a= link_to "Login", :login   
                        %a= link_to "Contact", "/contact_us/"



        #maincontent.fill 
            #page-wrap
                .content
                    = yield
    .footer
    .botright.linkopacity= link_to 'Home', :root