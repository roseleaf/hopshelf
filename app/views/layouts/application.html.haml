!!!
%html
    %head
        / %script{:src => "js/jquery.ba-hashchange.min.js", :type => "text/javascript"}
        %script{:src => "js/dynamicpage.js", :type => "text/javascript"}
        %title
            Shelfwire
        = stylesheet_link_tag "application"
        = javascript_include_tag :defaults, "application"
        = csrf_meta_tags
    %body
        .header.fill
            .logo
                =link_to image_tag('shelflogos.png'), :root
            .content
                .sidediv.clearfix
                .nav

                    .linx
                        - if current_user
                            .nlnk
                                %a{:href => "/regions/#{current_user.region_id}"} Others Nearby
                            .nlnk
                                = link_to "Your Shelf", book_user_path(current_user.id)                        
                            .nlnk
                                = link_to " Edit Profile ", edit_user_path(current_user.id)
                            .nlnk
                                = link_to " Logout ", :logout

                        -else
                            .nlnk
                                = link_to " Register ", new_user_path
                            .nlnk
                                = link_to " Login ", :login   
                        .nlnk
                            = link_to " Contact ", :contacts_new
                    / .greet
                    /     -if current_user
                    /         Welcome,
                    /         =current_user.username.capitalize

        #maincontent.fill 
            #page-wrap
                .content
                    %p#notice= notice
                    = yield
    .footer
    .botright.linkopacity= link_to 'Home', :root