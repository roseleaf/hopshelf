<div id="bookshelf" class ="clearfix">
    <table>
      <tr>
        <th>Book Title</th>
        <th>Author</th>
      </tr>

    <% books = Book.all %>

    <% books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Remove", book, :method => :delete %></td>
      </tr>
    <% end %>
    </table>
  <% if books.empty? %>
    <em>No books on this shelf yet</em>
  <% end %>

  