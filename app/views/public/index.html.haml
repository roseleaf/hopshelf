#page

  #leftside
    %h2 Places
    %ul.links
      - @regions.each do |region|
        %li
          %a{:href => region_path(region)}= truncate(region.name, :length => 10, :omission => '')

  #slideshow
    #slideshowWindow
      .slide
        = image_tag('/assets/1.jpg')
  .loggedon
    - if current_user
      %a{:href => "/regions/#{current_user.region_id}"} Others Near You
    %br
    - if current_user
      %a= link_to "Your Shelf", book_user_path(current_user.id)
#rightside
  %h2 Ideas
  %ul.links
    %li
      %a{:href => "/about"} About
    %li
      %a{:href => "/genres"} Subjects
    %li
      %a{:href => "/contacts/new"} Contact
